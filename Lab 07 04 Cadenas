#include <iostream>
#include <conio.h>
#include <string.h>

using namespace std;

bool esVocal(char car);
int cantidadVocales(char cad[]);
void invertirCadena(char cad[]);
void eliminarVocales(char cad[]);

void main(){
	char cadena[80];
	cout << "Introducir cadena : ";
	gets(cadena);
	cout << endl;
	cout << "\nLa cadena es: " << cadena;
	cout << "\nLa cantidad de vocales es  ----------> " << cantidadVocales(cadena);
	eliminarVocales(cadena);
	cout << "\nLa cadena sin vocales es: " << cadena;
	getch();
}

bool esVocal(char car){
	bool k = false;
	if (car=='a'||car=='e'||car=='i'||car=='o'||car=='u'||car=='A'||car=='E'||car=='I'||car=='O'||car=='U'){
		k = true;
	}
	return(k);
}

int cantidadVocales(char cad[]){
	int c = 0,i,n=strlen(cad);
	for(i=0;i<n;i++){
		if(esVocal(cad[i]) == true){
			c++;
		}
	}
	return(c);
}

void invertirCadena(char cad[]){
	int i,n=strlen(cad);
	char aux;
	for(i=0;i<n/2;i++){
		aux = cad[i];
		cad[i] = cad [n-1-i];
		cad[n-1-i] = aux;
	}
}

void eliminarVocales(char cad[]){
	int i,n=strlen(cad),k;
	for(i=0;i<n;i++){
		if(esVocal(cad[i]) == true ){
			for(k=i;k<n-1;k++){
				cad[k] = cad[k+1];
			}
			n--;
			i--;
		}
	}
	cad[n] = '\0';
}
