#include <iostream>
#include <conio.h>
using namespace std;

void main(){
	double f,n,i;
	f=1;
	do {
		cout << "Ingrese el Factorial que desea encontrar: ";
		cin >> n;
		if(n<0){
			cout << "El numero ingresado es negativo, por lo cual es invalido, le sugerimos ingresar una nueva opcion, la cual sea mayor a 0" << endl;
		}
		if(n==0){
			cout << "El numero ingresado es 0, por lo cual es invalido, le sugerimos ingresar una nueva opcion la cual sea mayor a 0" << endl;
		}
	}while (n<=0);
	for(i=2;i<=n;i++){
		f=f*i;
	}
	cout << "el factorial de: " << n << " es: " << f << endl;
	getch();
}
