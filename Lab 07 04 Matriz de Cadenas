#include <iostream>
#include <conio.h>
#include <string.h>

#define FIL 20
#define COL 20
using namespace std;

struct tCadena{
	char cad[80];
};

void cargar(tCadena mat[FIL][COL],int n,int m);
void mostrar(tCadena mat[FIL][COL],int n, int m);


void main(){
	int n,m;
	tCadena mat[FIL][COL];
	cout << "Numero De Filas: ";
	cin >> n;
	cout << "Numero De Columnas: ";
	cin >> m;
	cargar(mat,n,m);
	mostrar(mat,n,m);
	getch();
}

void cargar(tCadena mat[FIL][COL],int n,int m){
	int i,j;
	for(i=0;i<n;i++){
		for(j=0;j<m;j++){
			cout << "Introducir cadena: "<<"["<< i <<"],["<< j <<"]: ";
			do{
				gets(mat[i][j].cad);
			}while(strlen(mat[i][j].cad) == 0);
		}
	}
}

void mostrar(tCadena mat[FIL][COL],int n,int m){
	int i,j;
	cout << "\nLa Matriz es---------->>>: \n\n";
	for(i=0;i<n;i++){
		for(j=0;j<m;j++){
			cout << mat[i][j].cad << "  ";
		}
		cout << endl;
	}
}
